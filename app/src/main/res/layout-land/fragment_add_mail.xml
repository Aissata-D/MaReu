<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_mail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="8dp"
    tools:context=".ui.AddMailFragment">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/spinner_participant"
        android:layout_width="295dp"
        android:layout_height="55dp"

        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/list_participant"
        app:layout_constraintTop_toBottomOf="@+id/spinner_room" />

    <Spinner
        android:id="@+id/spinner_room"
        android:layout_width="294dp"
        android:layout_height="58dp"

        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_time_duration" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/meetting_subject"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="299dp"
        android:layout_height="82dp"

        android:layout_marginTop="16dp"
        android:hint="Sujet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_reunion">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="71dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/meetting_startDateLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="196dp"
        android:layout_height="79dp"
        android:layout_margin="16dp"
        android:layout_marginTop="28dp"
        android:hint="Date et heure du debut"
        app:layout_constraintEnd_toStartOf="@+id/spinner_time_duration"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@+id/meetting_subject"
        app:layout_constraintTop_toBottomOf="@+id/add_reunion">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/meetting_startDateInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="450dp"
            tools:layout_editor_absoluteY="79dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_time_duration"
        android:layout_width="114dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:prompt="@string/select_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_reunion" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_participant"
        android:layout_width="267dp"
        android:layout_height="111dp"
        android:layout_margin="16dp"

        android:layout_marginTop="40dp"
        android:gravity="top"
        android:hint="Participant name"
        android:text="Participant name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_room"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetting_subject"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/add_reunion"
        android:layout_width="161dp"
        android:layout_height="57dp"


        android:layout_marginTop="8dp"
        android:text="Add a meetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>