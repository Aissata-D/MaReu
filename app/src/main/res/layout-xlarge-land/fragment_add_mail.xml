<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_mail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="8dp"
    tools:context=".ui.AddMailFragment">

    <!-- TODO: Update blank fragment layout -->


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_add_participant"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"

        android:layout_weight="1"
        android:gravity="center_vertical"
        android:hint="Select participants"
        android:textSize="@dimen/size_text_mail_participant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetting_startDateTv" />

    <Spinner
        android:id="@+id/spinner_room"
        android:layout_width="192dp"
        android:layout_height="75dp"

        android:layout_margin="16dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toEndOf="@+id/tv_add_participant"
        app:layout_constraintTop_toBottomOf="@+id/spinner_time_duration" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/meetting_subject"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="432dp"
        android:layout_height="73dp"
        android:layout_margin="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_reunion">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Sujet"
            android:textSize="@dimen/size_text_sujet_time_place" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/meetting_startDateTv"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:hint="Date et heure du debut"
        android:textSize="@dimen/size_text_mail_participant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetting_subject" />

    <Spinner
        android:id="@+id/spinner_time_duration"
        android:layout_width="192dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:layout_marginStart="47dp"
        android:layout_weight="1"
        android:prompt="@string/select_duration"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toEndOf="@+id/meetting_startDateTv"
        app:layout_constraintTop_toBottomOf="@+id/meetting_subject" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_participant"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:gravity="left"
        android:hint="Participant name"
        android:textSize="@dimen/size_text_mail_participant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_participant" />


    <Button
        android:id="@+id/add_reunion"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:text="Add a meetting"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="480dp" />


</androidx.constraintlayout.widget.ConstraintLayout>