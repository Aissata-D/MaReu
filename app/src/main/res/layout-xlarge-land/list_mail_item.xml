<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_cercle"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Sujet - 14h00 - Place"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_land_tablet_sujet_time_place"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_cercle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/all_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toEndOf="@+id/all_text"
        app:layout_constraintTop_toTopOf="@+id/all_text"
        app:layout_constraintVertical_bias="0.0" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/meetting_all_email_item"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:ellipsize="marquee"
        android:gravity="top"
        android:singleLine="true"
        android:text="Participant name"
        android:textSize="@dimen/size_text_land_tablet_mail_participant"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/all_text"
        app:layout_constraintTop_toBottomOf="@id/all_text" />


</androidx.constraintlayout.widget.ConstraintLayout>